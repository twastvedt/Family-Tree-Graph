{
  "compilerOptions": {
    "sourceMap": true,
    "removeComments": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "lib": ["ESNext", "dom"]
  },
  "include": ["src/**/*"]
}
